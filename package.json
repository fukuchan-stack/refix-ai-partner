{
  "name": "refix-ai-partner",
  "displayName": "Refix AI Partner",
  "description": "Your AI coding partner, right in your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:refix-ai-partner.reviewSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "refix-ai-partner.reviewSelection",
        "title": "Refixでレビュー"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "refix-ai-partner.reviewSelection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Refix AI Partner",
      "properties": {
        "refixAiPartner.projectId": {
          "type": "string",
          "default": "",
          "description": "レビュー結果を紐付けるRefixプロジェクトのID。"
        },
        "refixAiPartner.apiKey": {
          "type": "string",
          "default": "",
          "description": "Refixバックエンドと通信するためのAPIキー。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
